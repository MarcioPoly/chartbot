<%= pluralize(@plays.count, "Play") %>

<table>
  <tr>
    <td colspan="5"><%= will_paginate @plays %></td>
  </tr>
  <% @plays.each do |play| %>
      <tr>
        <td style="width: 100px"><%= play.playdate %>. . .</td>
        <td><%= play.track.name %></td>
        <td><%= play.artist.name %></td>
        <td><%= play.album.name %></td>
        <td><%= link_to play.djname, djname_plays_path(play.djname) %></td>
      </tr>
<% end %>
  <tr>
    <td colspan="5"><%= will_paginate @artists %></td>
  </tr>
</table>

